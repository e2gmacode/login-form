{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["off"],
    "no-undef": ["off"],
    "no-alert": ["off"],
    "import/extensions": ["off"],
    "linebreak-style": ["off"],
    "react-hooks/exhaustive-deps": ["off"]
  },
  "extends": [
    "next/core-web-vitals",
    "airbnb-base",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ]
}
